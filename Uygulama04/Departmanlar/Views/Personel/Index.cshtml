@using Departmanlar.Models;
@model List<Personel>

@{
    ViewData["Title"] = "Index";
}
<h1>PERSONELLER</h1>
<hr />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>AD</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelID </td>
            <td>@x.Ad</td>
            <td>@x.Soyad</td>
            <td>@x.Sehir</td>
            <td>@x.Birim.BirimAd</td>
            <td><a href="/depart/DepartSil/@x.PersonelID" class="btn btn-danger">Sil</a></td>
            <td><a href="/depart/DepartGetir/@x.PersonelID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a asp-controller="Personel" asp-action="YeniPersonel" class="btn btn-primary">Yeni Personel</a>